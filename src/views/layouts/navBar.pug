nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom.p-3.px-md-4
  a.navbar-brand(href='/') Task Manager
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.px-2
        a.nav-link(href=urlFor('users')) All Users

    ul.navbar-nav
      if isSignedIn()
        li.nav-item.active.px-2
          a.btn.btn-outline-primary(href=urlFor('tasks')) All Tasks
        li.nav-item.active.px-2
          a.btn.btn-primary(href=urlFor('newTask')) Add Task
        li.nav-item.active.px-2
          a.btn.btn-secondary(href=urlFor('taskStatuses')) Manage Statuses
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            | Profile
          .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
            a.dropdown-item(href=urlFor('userProfile', getUserId())) View Profile
            a.dropdown-item(href=urlFor('editUser')) Edit Profile
            .dropdown-divider
            a.dropdown-item(href=urlFor('sessionDelete') data-method='delete' rel='nofollow') Sign Out
      else
        li.nav-item.px-2
          a.nav-link(href=urlFor('newSession')) Sign In
        li.nav-item.px-2
          a.btn.btn-outline-primary(href=urlFor('newUser')) Register


