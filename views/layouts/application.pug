include /mixins/forms.pug

doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= title ? title : 'Task Manager Page Title'
    script(src='/assets/app.js')
    script(src='/assets/vendors.app.js')
  body
    include navBar.pug


  - const msg = flash.get()
    if msg
      .container
        .alert.alert-info.m-3= msg

    block content
